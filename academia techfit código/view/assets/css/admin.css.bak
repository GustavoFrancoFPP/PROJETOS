/* --- VARIÁVEIS E CONFIGURAÇÕES GLOBAIS --- */
:root {
    --cor-ciano-principal: #00D1B2;
    --cor-fundo-escuro: #121212;
    --cor-card-painel: rgba(38, 38, 38, 0.7);
    --cor-borda-painel: rgba(122, 122, 122, 0.4);
    --cor-texto-primario: #FFFFFF;
    --cor-texto-secundario: #B3B3B3;
    --cor-item-lista: #e9ecef;
    --cor-item-lista-texto: #212529;
    --font-principal: 'Poppins', sans-serif;
    
    /* Header */
    --header-bg: rgba(18, 18, 18, 0.95);
    --header-border: rgba(0, 240, 225, 0.2);
    --nav-hover: #00f0e1;
    --nav-text: #ffffff;
    --nav-text-muted: #b0b0b0;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.admin-page {
    font-family: var(--font-principal);
    background: linear-gradient(135deg, #0c0c0c 0%, #1a1a1a 50%, #2d2d2d 100%);
    color: var(--cor-texto-primario);
    line-height: 1.6;
    min-height: 100vh;
}

/* Overlay para background */
.admin-page::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('imagens/background-pesos.jpg') center/cover no-repeat;
    opacity: 0.3;
    z-index: -1;
}

/* ===== HEADER MODERNO TECHFIT ===== */
.techfit-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: var(--header-bg);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--header-border);
    z-index: 1000;
    padding: 0;
    transition: all 0.3s ease;
}

.techfit-header.scrolled {
    background: rgba(10, 10, 10, 0.98);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
}

/* Logo */
.header-logo {
    display: flex;
    align-items: center;
    gap: 15px;
    text-decoration: none;
    transition: transform 0.3s ease;
}

.header-logo:hover {
    transform: scale(1.05);
}

.logo-image {
    height: 40px;
    width: auto;
    border-radius: 10px;
    transition: all 0.3s ease;
}

.logo-text {
    font-family: 'Poppins', sans-serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--nav-text);
    letter-spacing: -0.5px;
}

.logo-text span {
    color: var(--nav-hover);
}

/* Navegação Principal */
.main-navigation {
    display: flex;
    align-items: center;
    gap: 40px;
}

.nav-links {
    display: flex;
    gap: 35px;
    list-style: none;
    margin: 0;
    padding: 0;
}

.nav-link {
    position: relative;
    text-decoration: none;
    color: var(--nav-text-muted);
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    font-size: 1rem;
    padding: 10px 0;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.nav-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--nav-hover), #00d4ff);
    transition: width 0.3s ease;
}

.nav-link:hover {
    color: var(--nav-text);
}

.nav-link:hover::before {
    width: 100%;
}

.nav-link.active {
    color: var(--nav-hover);
}

.nav-link.active::before {
    width: 100%;
}

/* Botão de Ação */
.header-cta {
    margin-left: 30px;
    display: flex;
    align-items: center;
    gap: 15px;
}

.cta-button {
    background: linear-gradient(135deg, var(--nav-hover), #00d4ff);
    color: #000;
    text-decoration: none;
    padding: 12px 28px;
    border-radius: 25px;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 15px rgba(0, 240, 225, 0.3);
}

.cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 240, 225, 0.4);
    background: linear-gradient(135deg, #00d4ff, var(--nav-hover));
}

.cta-button.logout {
    background: linear-gradient(135deg, #ff3860, #ff6b95);
}

.cta-button.logout:hover {
    background: linear-gradient(135deg, #ff6b95, #ff3860);
}

/* Menu Hambúrguer */
.hamburger-menu {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
}

.hamburger-line {
    width: 25px;
    height: 3px;
    background: var(--nav-text);
    transition: all 0.3s ease;
    border-radius: 2px;
}

.hamburger-menu.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
}

.hamburger-menu.active .hamburger-line:nth-child(2) {
    opacity: 0;
}

.hamburger-menu.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
}

/* ===== CONTEÚDO PRINCIPAL ===== */
.admin-main {
    padding: 120px 0 60px;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 30px;
}

.page-title {
    font-size: 0.9rem;
    color: var(--cor-texto-secundario);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 25px 0;
    font-weight: 500;
}

/* --- GRIDS DE LAYOUT --- */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 25px;
    margin-bottom: 25px;
}

.main-content-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
}

/* --- ESTILO DOS CARDS E PAINEIS --- */
.stat-card, .panel {
    background: rgba(30, 30, 30, 0.85);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 25px;
    border-radius: 15px;
    transition: all 0.3s ease;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    position: relative;
    overflow: hidden;
}

.stat-card::before, .panel::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--cor-ciano-principal), #00d4ff);
    transform: scaleX(0);
    transition: transform 0.3s ease;
}

.stat-card:hover::before, .panel:hover::before {
    transform: scaleX(1);
}

.stat-card:hover, .panel:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
}

.stat-card h4 {
    color: var(--cor-texto-secundario);
    font-weight: 500;
    font-size: 1rem;
    margin-bottom: 10px;
}

.stat-card .value {
    color: var(--cor-ciano-principal);
    font-size: 2.5rem;
    font-weight: 700;
}

.panel h2 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--cor-texto-primario);
}

/* --- LISTAS (ACESSO E AGENDA) --- */
.item-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.item-list li {
    background-color: var(--cor-item-lista);
    color: var(--cor-item-lista-texto);
    padding: 10px 15px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 15px;
    transition: all 0.3s ease;
}

.item-list li:hover {
    transform: translateX(5px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.avatar {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background-color: #555;
    object-fit: cover;
}

.icon-placeholder {
    width: 35px;
    height: 35px;
    border-radius: 8px;
    background-color: rgba(0, 209, 178, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--cor-ciano-principal);
    font-size: 1.1rem;
}

.item-info { 
    flex-grow: 1; 
}

.item-info .name { 
    font-weight: 500; 
    color: var(--cor-item-lista-texto);
}

.time { 
    font-size: 0.9rem; 
    color: #6c757d; 
}

/* --- AÇÕES RÁPIDAS --- */
.actions-wrapper {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.action-btn {
    background: linear-gradient(135deg, var(--cor-ciano-principal), #00d4ff);
    color: var(--cor-fundo-escuro);
    text-decoration: none;
    padding: 20px;
    border-radius: 8px;
    text-align: center;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0, 209, 178, 0.3);
}

.action-btn.primary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
}

.action-btn.primary i {
    font-size: 1.3rem;
}

.action-btn:hover {
    background: linear-gradient(135deg, #00d4ff, var(--cor-ciano-principal));
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 209, 178, 0.4);
}

/* ===== FOOTER ===== */
.main-footer {
    background: rgba(0, 0, 0, 0.8);
    padding: 40px 0;
    font-size: 0.95rem;
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.main-footer .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.footer-brand {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
}

.footer-brand .logo-img {
    height: 45px;
    width: auto;
    border-radius: 10px;
}

.footer-brand p {
    color: var(--cor-texto-secundario);
    margin: 0;
    font-style: italic;
}

.footer-copyright {
    color: var(--cor-texto-secundario);
    text-align: center;
}

.footer-contact {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.footer-contact a {
    color: var(--cor-texto-primario);
    display: flex;
    align-items: center;
    gap: 12px;
    transition: all 0.3s ease;
    font-size: 0.9rem;
    text-decoration: none;
}

.footer-contact a:hover {
    color: var(--cor-ciano-principal);
    transform: translateX(5px);
}

/* --- RESPONSIVIDADE --- */
@media (max-width: 1200px) {
    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    .main-content-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .container {
        padding: 0 15px;
    }
    
    .header-container {
        height: 70px;
        padding: 0 15px;
    }
    
    .logo-text {
        font-size: 1.5rem;
    }
    
    .logo-image {
        height: 35px;
    }
    
    .hamburger-menu {
        display: flex;
    }
    
    .main-navigation {
        position: fixed;
        top: 70px;
        left: 0;
        width: 100%;
        background: var(--header-bg);
        backdrop-filter: blur(20px);
        flex-direction: column;
        gap: 0;
        padding: 20px 0;
        transform: translateY(-100%);
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
        border-bottom: 1px solid var(--header-border);
    }
    
    .main-navigation.active {
        transform: translateY(0);
        opacity: 1;
        visibility: visible;
    }
    
    .nav-links {
        flex-direction: column;
        gap: 0;
        width: 100%;
    }
    
    .nav-link {
        padding: 15px 30px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        width: 100%;
        display: block;
    }
    
    .header-cta {
        margin: 20px 30px 0;
        width: calc(100% - 60px);
        flex-direction: column;
    }
    
    .cta-button {
        width: 100%;
        text-align: center;
        justify-content: center;
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
    }
    
    .admin-main {
        padding: 100px 0 40px;
    }
}

@media (max-width: 480px) {
    .header-container {
        height: 60px;
    }
    
    .logo-text {
        font-size: 1.3rem;
    }
    
    .logo-image {
        height: 30px;
    }
    
    .main-navigation {
        top: 60px;
    }
    
    .admin-main {
        padding: 90px 0 30px;
    }
    
    .main-footer .container {
        flex-direction: column;
        gap: 25px;
        text-align: center;
    }
    
    .footer-contact {
        align-items: center;
    }
    
    .footer-brand {
        align-items: center;
    }
    
    .footer-brand .logo-img {
        height: 40px;
    }

    /* ===== ESTILOS PARA TABELAS ===== */
.data-table {
    width: 100%;
    border-collapse: collapse;
    background: rgba(30, 30, 30, 0.8);
    border-radius: 10px;
    overflow: hidden;
}

.data-table th {
    background: rgba(0, 209, 178, 0.2);
    color: var(--cor-texto-primario);
    padding: 15px;
    text-align: left;
    font-weight: 600;
    border-bottom: 2px solid var(--cor-ciano-principal);
}

.data-table td {
    padding: 15px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--cor-texto-primario);
}

.data-table tr:hover {
    background: rgba(255, 255, 255, 0.05);
}

.data-table-container {
    overflow-x: auto;
    border-radius: 10px;
}

/* ===== BADGES E STATUS ===== */
.status-badge {
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.status-active {
    background: rgba(0, 209, 178, 0.2);
    color: var(--cor-ciano-principal);
}

.status-inactive {
    background: rgba(255, 255, 255, 0.1);
    color: var(--cor-texto-secundario);
}

.status-pending {
    background: rgba(255, 193, 7, 0.2);
    color: #ffc107;
}

.status-completed {
    background: rgba(40, 167, 69, 0.2);
    color: #28a745;
}

.status-cancelled {
    background: rgba(220, 53, 69, 0.2);
    color: #dc3545;
}

/* ===== FORMULÁRIOS ===== */
.form-group {
    margin-bottom: 20px;
}

.form-label {
    display: block;
    margin-bottom: 8px;
    color: var(--cor-texto-primario);
    font-weight: 500;
}

.form-control {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    color: var(--cor-texto-primario);
    font-family: var(--font-principal);
    font-size: 1rem;
    transition: all 0.3s ease;
}

.form-control:focus {
    outline: none;
    border-color: var(--cor-ciano-principal);
    box-shadow: 0 0 0 2px rgba(0, 209, 178, 0.2);
    background: rgba(255, 255, 255, 0.15);
}

.form-control::placeholder {
    color: var(--cor-texto-secundario);
}

/* ===== BOTÕES ADICIONAIS ===== */
.btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--cor-texto-primario);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
}

.btn-danger {
    background: linear-gradient(135deg, #dc3545, #e83e8c);
    color: white;
}

.btn-danger:hover {
    background: linear-gradient(135deg, #e83e8c, #dc3545);
}

/* ===== CARDS DE ESTATÍSTICAS AVANÇADAS ===== */
.stats-card {
    background: rgba(30, 30, 30, 0.85);
    padding: 25px;
    border-radius: 15px;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.stats-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
}

.stats-card .icon {
    font-size: 2.5rem;
    color: var(--cor-ciano-principal);
    margin-bottom: 15px;
}

.stats-card .value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--cor-texto-primario);
    margin-bottom: 5px;
}

.stats-card .label {
    color: var(--cor-texto-secundario);
    font-size: 0.9rem;
}

/* ===== GRADIENTES PARA DIFERENTES CATEGORIAS ===== */
.gradient-primary {
    background: linear-gradient(135deg, var(--cor-ciano-principal), #00d4ff);
}

.gradient-success {
    background: linear-gradient(135deg, #28a745, #20c997);
}

.gradient-warning {
    background: linear-gradient(135deg, #ffc107, #fd7e14);
}

.gradient-danger {
    background: linear-gradient(135deg, #dc3545, #e83e8c);
}

/* ===== MODAIS ===== */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
    z-index: 2000;
    align-items: center;
    justify-content: center;
}

.modal.active {
    display: flex;
}

.modal-content {
    background: var(--cor-card-painel);
    padding: 30px;
    border-radius: 15px;
    width: 90%;
    max-width: 500px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
}

.modal-close {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    color: var(--cor-texto-secundario);
    font-size: 1.5rem;
    cursor: pointer;
    transition: color 0.3s ease;
}

.modal-close:hover {
    color: var(--cor-texto-primario);
}

/* ===== RATING STARS ===== */
.rating-stars {
    color: #ffc107;
    margin: 5px 0;
}

.rating-stars .fa-star {
    margin-right: 2px;
}
}