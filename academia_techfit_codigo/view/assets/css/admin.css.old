body { background: #0f1419; color: #fff; font-family: 'Poppins', sans-serif; }
.container { max-width: 1400px; margin: 0 auto; padding: 30px 20px; }
.page-title { font-size: 2rem; color: #00F0E1; margin-bottom: 30px; text-align: center; }
.alert { padding: 15px 20px; border-radius: 10px; margin-bottom: 20px; }
.alert-success { background: rgba(0,240,129,0.2); border: 1px solid rgba(0,240,129,0.5); color: #00F081; }
.alert-error { background: rgba(255,68,68,0.2); border: 1px solid rgba(255,68,68,0.5); color: #ff4444; }
.stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 40px; }
.stat-card { background: rgba(30, 35, 50, 0.9); padding: 25px; border-radius: 15px; border-left: 4px solid #00F0E1; }
.stat-card h4 { margin: 0 0 10px 0; color: #aaa; font-size: 0.9rem; }
.stat-card .value { font-size: 2.5rem; font-weight: bold; color: #00F0E1; margin: 0; }
.panel { background: rgba(30, 35, 50, 0.9); padding: 30px; border-radius: 20px; margin-bottom: 30px; }
.panel h2 { color: #00F0E1; margin-bottom: 20px; font-size: 1.5rem; }
.data-table { width: 100%; border-collapse: collapse; }
.data-table thead { background: rgba(0,240,225,0.1); }
.data-table th { padding: 15px; text-align: left; color: #00F0E1; font-weight: 600; }
.data-table td { padding: 15px; border-bottom: 1px solid rgba(255,255,255,0.05); }
.data-table tbody tr:hover { background: rgba(255,255,255,0.03); }
.btn { padding: 8px 16px; border-radius: 8px; border: none; cursor: pointer; font-weight: 600; text-decoration: none; display: inline-block; transition: all 0.3s; }
.btn-danger { background: rgba(255,68,68,0.8); color: #fff; }
.btn-danger:hover { background: rgba(255,68,68,1); }
.btn-primary { background: #00F0E1; color: #0a0e27; }
.btn-primary:hover { background: #00A8CC; }
.form-group { margin-bottom: 20px; }
.form-label { display: block; margin-bottom: 8px; color: #aaa; font-weight: 500; }
.form-control { width: 100%; padding: 12px 15px; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.2); border-radius: 10px; color: #fff; }
.form-control:focus { outline: none; border-color: #00F0E1; }
.main-content-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 30px; }
.item-list { list-style: none; padding: 0; margin: 0; }
.item-list li { display: flex; justify-content: space-between; padding: 15px 0; border-bottom: 1px solid rgba(255,255,255,0.05); }
.item-info { flex: 1; }
.name { display: block; color: #fff; font-weight: 500; }
.time { color: #00F0E1; font-weight: 600; }
.techfit-header { background: rgba(10, 14, 39, 0.95); padding: 15px 0; border-bottom: 2px solid rgba(0,240,225,0.3); margin-bottom: 30px; }
.header-container { max-width: 1400px; margin: 0 auto; padding: 0 20px; display: flex; justify-content: space-between; align-items: center; }
.logo-text { font-size: 1.5rem; font-weight: bold; color: #fff; }
.logo-text span { color: #00F0E1; }
.nav-links { display: flex; gap: 30px; list-style: none; padding: 0; margin: 0; align-items: center; }
.nav-link { color: #fff; text-decoration: none; transition: color 0.3s; padding: 8px 16px; }
.nav-link:hover, .nav-link.active { color: #00F0E1; }
.cta-button { background: #ff4444; color: #fff; padding: 10px 20px; border-radius: 8px; text-decoration: none; font-weight: 600; }
.empty-state { text-align: center; padding: 40px; color: #666; }
.header-logo { display: flex; align-items: center; gap: 10px; text-decoration: none; }
.logo-image { width: 40px; height: 40px; object-fit: contain; }
